server{
    server_name mottoex.com.ua;
    location /media {
        alias /home/jurgeon/projects/moto/src/media;
    }
    location /static {
        alias /home/jurgeon/projects/moto/src/static_root;
    }
    location / {
        uwsgi_pass unix:/home/jurgeon/projects/moto/src/config/moto.sock;
        include uwsgi_params;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/mottoex.com.ua/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/mottoex.com.ua/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}





server{
    if ($host = mottoex.com.ua) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name mottoex.com.ua;
    return 404; # managed by Certbot


}